<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".central_admin_settings">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="20dp"
            android:id="@+id/force_in_active_off"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="All force In active Off"/>

        <Button
            android:layout_margin="20dp"
            android:id="@+id/force_out"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Force Out"/>


        <Button
            android:layout_margin="20dp"
            android:id="@+id/radius_time"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Radius Time"/>

        <Button
            android:layout_margin="20dp"
            android:id="@+id/password_central"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Password"/>
        <Button
            android:layout_margin="20dp"
            android:id="@+id/master_password_central"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Master Password"/>

        <Button
            android:layout_margin="20dp"
            android:id="@+id/admin_roster"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Admin Roster"/>

    </LinearLayout>

</ScrollView>