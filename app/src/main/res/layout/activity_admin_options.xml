<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AdminOptions">

    <LinearLayout

        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:src="@drawable/lal_bus" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Select Bus :"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="Suspicious0dp" />

            <Spinner
                android:id="@+id/busSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_round"
                android:textAlignment="center"
                android:textSize="18sp">

            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Select Time :"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="Suspicious0dp" />

            <Spinner
                android:id="@+id/timeSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_round"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="Suspicious0dp">


            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/adminHoise"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:text="Change profile settings ?"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_weight="4"
                android:id="@+id/profile_settings"
                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/button"
                android:gravity="start"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" Profile Settings" />

        </LinearLayout>





        <Button
            android:id="@+id/ButtonContinue"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/signbutton_back"
            android:text="Continue"
            android:textColor="@color/white" />





            <TextView
                android:background="@null"
                android:id="@+id/masteradmin"
                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/button"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginTop="40dp"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Master Admin Mode"
                tools:ignore="RtlCompat" />

        <TextView
            android:background="@null"
            android:id="@+id/centraladmin"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  CENTRAL ADMIN"
            tools:ignore="RtlCompat" />



    </LinearLayout>




</LinearLayout>