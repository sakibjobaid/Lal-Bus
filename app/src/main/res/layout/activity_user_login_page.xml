<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".UserLoginPage">
    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView

            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:src="@drawable/lal_bus" />


    </LinearLayout>
    <LinearLayout
        android:paddingBottom="40dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">



        <EditText

            android:inputType="number"
            android:background="@drawable/home_right_left_flat"
            android:hint="Phone number  (01_ _ _ _ _ _ _ _ _)"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/emailText"/>

        <EditText
            android:textAlignment="center"
            android:hint="Verification code"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_right_left_flat"
            android:layout_gravity="center"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/passwordText"/>


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/logButton"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/signbutton_back"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="SEND"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code Not Received?"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/regButton"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/signbutton_back"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="SEND AGAIN"/>



    </LinearLayout>





</LinearLayout>