<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".RouteOptions">

    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="0"
            android:layout_marginTop="5dp"
            android:src="@drawable/lal_bus" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "100dp">

            <TextView
                android:id="@+id/ParaTvDir"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="20dp"
                android:text="Direction :"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:ignore="Suspicious0dp" />
            <Spinner
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/spinner_round"
                android:id="@+id/dirSpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp">

            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "100dp">

            <TextView
                android:id="@+id/ParaTvRoute"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:text="Route No.:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="Suspicious0dp" />
            <Spinner
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/routeSpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_round"
                android:layout_height="50dp"
                tools:ignore="Suspicious0dp">



            </Spinner>


        </LinearLayout>

        <Button
            android:id="@+id/ButtonContinue"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/signbutton_back"
            android:text="Continue"
            android:textColor="@color/white" />
    </LinearLayout>




</LinearLayout>