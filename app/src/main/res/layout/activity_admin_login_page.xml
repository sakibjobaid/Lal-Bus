<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".AdminLoginPage">
    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView

            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:src="@drawable/lal_bus" />


    </LinearLayout>
    <LinearLayout
        android:paddingBottom="40dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">



        <TextView

            android:textSize="20sp"
            android:text="Admin for Taranga 12:15 down"
            android:textAlignment="center"
            android:textColor="@color/button"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/emailText"/>

        <EditText
            android:inputType="textPassword"
            android:textAlignment="center"
            android:hint="Admin Password"
            android:background="@drawable/home_right_left_flat"
            android:layout_gravity="center"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/passwordText"/>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/logButton"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/signbutton_back"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sign In"/>


    </LinearLayout>





</LinearLayout>